// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String
  password  String?
  image     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  rating    Int        @default(1200)
  ratingHistory RatingHistory[]

  debates      Debate[]
  arguments    Argument[]
  sessions     Session[]
  aiMessages   AIAssistantMessage[]

  @@index([email])
}

model Session {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String     @unique
  expiresAt DateTime
  createdAt DateTime   @default(now())

  @@index([userId])
  @@index([token])
}

model Debate {
  id          String     @id @default(cuid())
  title       String
  topic       String
  status      String     @default("pending") // pending, active, completed
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  startedAt   DateTime?
  endedAt     DateTime?

  participants User[]
  arguments    Argument[]
  analysis     DebateAnalysis?

  roomCode    String?    @unique
  isPublic    Boolean    @default(false)
  maxParticipants Int    @default(2)

  // Debate mode: friendly, famous, online
  mode        String     @default("friendly")
  
  // For friendly mode
  numPersons  Int?
  
  // For famous personalities mode
  personalityId String?
  personality FamousPersonality? @relation(fields: [personalityId], references: [id])
  
  // For online debates mode
  category    String?    // tech, politics, entertainment, sports, etc
  difficulty  String?    // beginner, intermediate, expert
  matchCode   String?    @unique

  @@index([status])
  @@index([createdAt])
  @@index([mode])
}

model FamousPersonality {
  id          String     @id @default(cuid())
  name        String     @unique
  title       String     // e.g., "Scientist", "Philosopher", "Politician"
  description String?
  background  String     // Biography and key info
  argumentStyle String   // How they argue
  keyBeliefs  String     // Their main positions
  famousQuotes String?
  image       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  debates     Debate[]

  @@index([name])
}

model Argument {
  id        String     @id @default(cuid())
  debateId  String
  debate    Debate     @relation(fields: [debateId], references: [id], onDelete: Cascade)
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  content   String
  timestamp DateTime   @default(now())
  side      Side       @default(NEUTRAL)
  analysis  ArgumentAnalysis?

  @@index([debateId])
  @@index([userId])
  @@index([timestamp])
}

enum Side {
  PRO
  CON
  NEUTRAL
}

model ArgumentAnalysis {
  id          String     @id @default(cuid())
  argumentId  String     @unique
  argument    Argument   @relation(fields: [argumentId], references: [id], onDelete: Cascade)

  argumentStrength    Float  @default(0)
  relevance          Float  @default(0)
  evidenceUsage      Float  @default(0)
  logicalConsistency Float  @default(0)
  engagement         Float  @default(0)
  overallScore       Float  @default(0)

  feedback   String?
  createdAt  DateTime   @default(now())
}

model DebateAnalysis {
  id          String     @id @default(cuid())
  debateId    String     @unique
  debate      Debate     @relation(fields: [debateId], references: [id], onDelete: Cascade)

  participantScores Json  // { userId: score }
  winner          String? // No winner, just scores
  summary         String?
  insights        String?

  createdAt   DateTime   @default(now())
}

model RatingHistory {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  previousRating  Int
  newRating       Int
  change          Int
  reason          String  // debate_win, debate_loss, debate_performance
  debateId        String?

  createdAt   DateTime   @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Leaderboard {
  id        String     @id @default(cuid())
  userId    String
  rank      Int        @unique
  rating    Int
  debatesParticipated Int @default(0)
  winRate   Float      @default(0)
  updatedAt DateTime   @updatedAt

  @@index([rating])
  @@index([rank])
}

model AIAssistantMessage {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  message   String
  response  String
  context   String?    // "dashboard", "debate", "analysis"
  debateId  String?    // Optional, if related to a specific debate
  
  createdAt DateTime   @default(now())

  @@index([userId])
  @@index([debateId])
}

model OnlineDebatePool {
  id          String     @id @default(cuid())
  category    String     // tech, politics, entertainment, sports, etc
  difficulty  String     // beginner, intermediate, expert
  title       String
  description String?
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([category])
  @@index([difficulty])
}
